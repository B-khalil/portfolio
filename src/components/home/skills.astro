<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2 class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100">
    My Skills & Tools
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    Here are the technologies and tools I use to build modern applications:
  </p>

  <div class="flex flex-col lg:flex-row justify-between gap-6 my-7">
    <!-- Mobile Dev Card -->
    <div class="flex-1 p-6 bg-white dark:bg-neutral-950 border-2 border-dashed border-neutral-300 dark:border-neutral-700 rounded-lg transition-all duration-300 ease-out hover:scale-105 hover:border-neutral-500 dark:hover:border-neutral-400">
      <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">Mobile Development</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mt-4">
        {skills.filter(skill => ["Flutter", "Dart", "Firebase","Kotlin","Android Studio"].includes(skill.name)).map(skill => (
          <div class="relative flex flex-col items-center space-y-2 group transition-all duration-300 ease-out hover:scale-105 hover:text-neutral-900 dark:hover:text-neutral-100">
            <div class="relative z-30">
              <div
                class="w-16 h-16 p-2 border-2 border-dashed rounded-lg bg-white dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700 transition-all duration-300 ease-out group-hover:border-neutral-500 dark:group-hover:border-neutral-400"
              >
                <img
                  src={skill.icon}
                  alt={skill.name}
                  class="w-full h-full transition-all duration-300 ease-out group-hover:scale-110"
                />
              </div>
            </div>
            <div class="relative z-30">
              <p class="text-sm text-neutral-700 dark:text-neutral-200 transition-colors duration-300 ease-out group-hover:text-neutral-900 dark:group-hover:text-neutral-100">
                {skill.name}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Web Dev Card -->
    <div class="flex-1 p-6 bg-white dark:bg-neutral-950 border-2 border-dashed border-neutral-300 dark:border-neutral-700 rounded-lg transition-all duration-300 ease-out hover:scale-105 hover:border-neutral-500 dark:hover:border-neutral-400">
      <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">Web Development</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mt-4">
        {skills.filter(skill => ["React","NodeJS","Express", "JavaScript", "CSS3", "HTML5"].includes(skill.name)).map(skill => (
          <div class="relative flex flex-col items-center space-y-2 group transition-all duration-300 ease-out hover:scale-105 hover:text-neutral-900 dark:hover:text-neutral-100">
            <div class="relative z-30">
              <div
                class="w-16 h-16 p-2 border-2 border-dashed rounded-lg bg-white dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700 transition-all duration-300 ease-out group-hover:border-neutral-500 dark:group-hover:border-neutral-400"
              >
                <img
                  src={skill.icon}
                  alt={skill.name}
                  class="w-full h-full transition-all duration-300 ease-out group-hover:scale-110"
                />
              </div>
            </div>
            <div class="relative z-30">
              <p class="text-sm text-neutral-700 dark:text-neutral-200 transition-colors duration-300 ease-out group-hover:text-neutral-900 dark:group-hover:text-neutral-100">
                {skill.name}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tools Card -->
    <div class="flex-1 p-6 bg-white dark:bg-neutral-950 border-2 border-dashed border-neutral-300 dark:border-neutral-700 rounded-lg transition-all duration-300 ease-out hover:scale-105 hover:border-neutral-500 dark:hover:border-neutral-400">
      <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">Tools</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mt-4">
        {skills.filter(skill => ["Git", "Kubernetes", "Docker", "Grafana","Gitlab CI","Jenkins","Sonarqube"].includes(skill.name)).map(skill => (
          <div class="relative flex flex-col items-center space-y-2 group transition-all duration-300 ease-out hover:scale-105 hover:text-neutral-900 dark:hover:text-neutral-100">
            <div class="relative z-30">
              <div
                class="w-16 h-16 p-2 border-2 border-dashed rounded-lg bg-white dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700 transition-all duration-300 ease-out group-hover:border-neutral-500 dark:group-hover:border-neutral-400"
              >
                <img
                  src={skill.icon}
                  alt={skill.name}
                  class="w-full h-full transition-all duration-300 ease-out group-hover:scale-110"
                />
              </div>
            </div>
            <div class="relative z-30">
              <p class="text-sm text-neutral-700 dark:text-neutral-200 transition-colors duration-300 ease-out group-hover:text-neutral-900 dark:group-hover:text-neutral-100">
                {skill.name}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <div class="flex items-center justify-center w-full py-5">
    <a
      href="/portfolio"
      class="px-5 py-3 text-xs font-semibold text-center duration-300 ease-out border rounded bg-neutral-900 dark:bg-neutral-100 dark:hover:border-neutral-300 dark:text-neutral-800 dark:hover:bg-neutral-950 dark:hover:text-neutral-100 text-neutral-100 border-neutral-900 hover:bg-white hover:text-neutral-900"
    >
      View My Portfolio
    </a>
  </div>
</section>
